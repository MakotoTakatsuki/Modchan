extends ../layout.pug
include ../mixins/boardheader.pug
include ../mixins/boardnav.pug

block head
	title /#{board._id}/ - バナー

block content
	+boardheader('バナー')
	br
	include ../includes/stickynav.pug
	.pages
		+boardnav('banners', true, false)
	hr(size=1)
	if board.banners.length > 0
		.catalog
			each banner in board.banners
				img.board-banner(src=`/banner/${board._id}/${banner}` loading='lazy')
	else
		p 板にはカスタムバナーはありません。
	include ../includes/stickynav.pug
	hr(size=1)
	.pages
		+boardnav('banners', true, false)
