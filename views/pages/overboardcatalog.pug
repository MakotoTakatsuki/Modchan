extends ../layout.pug
include ../mixins/catalogtile.pug
include ../mixins/overboardform.pug
include ../mixins/announcements.pug

block head
	title オーバー板カタログ

block content
	.board-header.mb-5
		h1.board-title オーバー板カタログ
		h4.board-description 複数の板から最近ぶつかったスレッド
			|  
			| (
			a(href=`/overboard.html?${cacheQueryString}`) インデックスビュー
			| )
	if allowCustomOverboard === true
		+overboardform('/catalog.html')
	+announcements()
	include ../includes/stickynav.pug
	.wrapbar
		.pages.jsonly
			input#catalogfilter(type='text' placeholder='Filter')
			select.ml-5.right#catalogsort
				option(value="" disabled selected hidden) 並び替え
				option(value="bump") 注文を上げる
				option(value="date") 作成日
				option(value="replies") 返信数
	hr(size=1)
	if threads.length === 0
		p 投稿はありません。
	else 
		.catalog
			for thread, i in threads
				+catalogtile(thread, i, true)
	hr(size=1)
