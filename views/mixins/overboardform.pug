mixin overboardform(overboardFormAction)
	.flexcenter.mv-10
		details
			summary.collapse Customise
			form.mt-5.form-post#overboardform(action=overboardFormAction method='GET')
				.col
					.row
						.label デフォルトの板を含める
						label.postform-style.ph-5
							input(type='checkbox', name='include_default', value='true' checked=includeDefault)
					.row
						.label 板を追加
						input(type='text' name='add' value=addBoards.join(',') placeholder='comma separated')
					.row
						.label 板を削除します
						input(type='text' name='rem' value=removeBoards.join(',') placeholder='comma separated')
				input(type='submit', value='フィルター')
